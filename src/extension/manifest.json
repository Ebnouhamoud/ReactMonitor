{
  "manifest_version": 2,
  "name": "React Monitor",
  "version": "1.0.0",
  "devtools_page": "devtools.html",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "style.scss"
      ]
    }
  ],
  "background": {
    "scripts": [
      "backgroundScript.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "ids": [
      "*"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}